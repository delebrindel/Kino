<Window x:Class="Kino.GesturesWindow"        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Cursor Control" Height="500" Width="800" Loaded="Window_Loaded" Closed="WindowClosed"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" 
        xmlns:my="clr-namespace:KinoControlLib;assembly=KinoControlLib" Cursor="Hand" SizeToContent="WidthAndHeight">
    <StackPanel>
        <Expander Name="VG_Ex_Sensor" ExpandDirection="Down" IsEnabled="False">
            <my:SensorChooser Name="kinectSensorChooser" Height="210" VerticalAlignment="Center" />
        </Expander>
        <Image Width="320" Height="240" Name="video"/>
        <StatusBar Height="100">
            <CheckBox VerticalAlignment="Center" Name="LeftHand">Modo Zurdo</CheckBox>
            <CheckBox VerticalAlignment="Center" Name="VPai_Ch_Seated" Checked="VPai_Ch_SeatedModeChanged" Unchecked="VPai_Ch_SeatedModeChanged" IsChecked="True">Modo Sentado</CheckBox>
            <TextBlock VerticalAlignment="Center"  Name="VG_LS_Status" Text="Gesto" FontSize="24" Margin="20"/>
            <TextBlock VerticalAlignment="Center" Name="VG_L_Status" Text="-----------" FontSize="24" Margin="20"/>
        </StatusBar>        
    </StackPanel>
</Window>
    
