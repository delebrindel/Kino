<UserControl x:Class="KinoControlLib.KinoMouse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:KinoBasicLib;assembly=KinoBasicLib"
        Height="Auto" Width="Auto" Background="White">
    <StackPanel Background="White">
        <Expander Name="Expansor"  IsEnabled="True">
            <my:SensorChooser Name="kinectSensorChooser" Height="200"/>
        </Expander>
        <StatusBar Background="White">
            <Image Name="video" Height="60" Width="80"/>
            <CheckBox Margin="20" Name="LeftHand" Content="Modo Zurdo"/>
            <CheckBox Name="VPai_Ch_Seated" IsChecked="True " Content="Modo Sentado"/>
        </StatusBar>
    </StackPanel>
</UserControl>
